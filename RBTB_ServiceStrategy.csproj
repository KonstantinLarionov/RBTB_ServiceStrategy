        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
        <PackageReference Include="System.Security.Permissions" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="BinanceMapper">
        <HintPath>_libs\BinanceMapper.dll</HintPath>
      </Reference>
      <Reference Include="BouncyCastle.Crypto">
        <HintPath>_libs\BouncyCastle.Crypto.dll</HintPath>
      </Reference>
      <Reference Include="JetBrains.Annotations">
        <HintPath>_libs\JetBrains.Annotations.dll</HintPath>
      </Reference>
      <Reference Include="Newtonsoft.Json">
        <HintPath>_libs\Newtonsoft.Json.dll</HintPath>
      </Reference>
      <Reference Include="RestSharp">
        <HintPath>_libs\RestSharp.dll</HintPath>
      </Reference>
      <Reference Include="System.Net.Http">
        <HintPath>_libs\System.Net.Http.dll</HintPath>
      </Reference>
      <Reference Include="System.Security.Cryptography.Algorithms">
        <HintPath>_libs\System.Security.Cryptography.Algorithms.dll</HintPath>
      </Reference>
      <Reference Include="System.Security.Cryptography.Encoding">
