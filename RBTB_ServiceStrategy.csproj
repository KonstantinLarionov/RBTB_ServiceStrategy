      </Reference>
      <Reference Include="System.Security.Cryptography.Primitives">
        <HintPath>_libs\System.Security.Cryptography.Primitives.dll</HintPath>
      </Reference>
      <Reference Include="System.Security.Cryptography.X509Certificates">
